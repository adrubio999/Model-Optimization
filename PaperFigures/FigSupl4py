import numpy as np
import matplotlib.pyplot as plt
import sys
sys.path.insert(1,'C:\Septiembre-Octubre\Model-Optimization\PaperFigures')

from aux_fcn import fcn_load_pickle
from fig_aux_fcn import colors_dic

F1_std_pickle=fcn_load_pickle('C:\Septiembre-Octubre\Model-Optimization\PaperFigures\Supl4_parameter_F1_std.pickle')

arqs=['XGBOOST','SVM','LSTM','CNN2D','CNN1D']
fig,axs=plt.subplots(1,5,figsize=(10,4),tight_layout=True)

for a,ax in enumerate (axs):
    F1_std=F1_std_pickle[a]
    ax.bar(range(len(F1_std)),F1_std,color=colors_dic[arqs[a]])
    ax.set_title(arqs[a])
    if a==0:
        ax.set_ylabel("Std of means\n(Relative effect of the parameter)")
#f.set_ytitle("# of positive detections")

plt.show()